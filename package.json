{
  "name": "OpossumUI",
  "description": "The OpossumUI enables the editing of attribution information that is assigned to a resource tree.",
  "license": "Apache-2.0",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@reduxjs/toolkit": "^1.6.2",
    "clsx": "^1.1.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "fast-csv": "^4.3.6",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.2.6",
    "lodash": "^4.17.21",
    "object-hash": "^2.2.0",
    "packageurl-js": "^0.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-window": "^1.8.5",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "spdx-license-ids": "^3.0.10",
    "stream-json": "^1.7.2",
    "upath": "^2.0.1",
    "uuid": "^8.3.0",
    "write-file-atomic": "^3.0.3"
  },
  "devDependencies": {
    "@material-ui/types": "^5.1.0",
    "@testing-library/dom": "^8.9.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.3.0",
    "@testing-library/webdriverio": "^3.0.4",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.3",
    "@types/lodash": "^4.14.175",
    "@types/object-hash": "^2.2.1",
    "@types/react": "^17.0.29",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.19",
    "@types/react-window": "^1.8.5",
    "@types/stream-json": "^1.7.1",
    "@types/uuid": "^8.3.1",
    "@types/write-file-atomic": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "^13.5.2",
    "electron-builder": "^22.13.1",
    "electron-chromedriver": "^15.0.0",
    "electron-packager": "^15.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-testing-library": "^4.10.1",
    "husky": "7.0.2",
    "jest-each": "^27.2.5",
    "lint-staged": "^11.2.3",
    "mockdate": "^3.0.5",
    "nunjucks": "^3.2.3",
    "prettier": "^2.3.2",
    "react-scripts": "4.0.3",
    "redux-devtools-extension": "^2.13.9",
    "run-script-os": "^1.1.6",
    "spectron": "^15.0.0",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0",
    "webdriverio": "^7.14.1"
  },
  "scripts": {
    "start": "run-script-os",
    "start:darwin:linux": "concurrently \"yarn build; BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "start:win32": "start /b wait-on http://localhost:3000 ^&^& electron . & yarn build & cross-env BROWSER=none react-scripts start",
    "build": "yarn generate-notice && react-scripts build && tsc -p src/ElectronBackend",
    "compile-all": "tsc -p ./ && tsc --noEmit -p src/ElectronBackend",
    "test": "react-scripts test --watchAll=false --testPathIgnorePatterns=src/integration-tests",
    "unit-test": "yarn test -w 1",
    "integration-test": "concurrently \"yarn build; BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && react-scripts test --watchAll=false src/integration-tests\"",
    "lint": "eslint -c .eslintrc.js \"src/**/*.{ts,tsx}\" --fix",
    "lint-check": "eslint -c .eslintrc.js \"src/**/*.{ts,tsx}\"",
    "copyright-lint-check": "reuse lint",
    "update-commit-hash": "run-script-os",
    "update-commit-hash:darwin:linux": "COMMIT_INFO=$(git describe --exact-match --tags 2> /dev/null || git rev-parse --short HEAD); echo \"{\\\"commitInfo\\\" : \\\"$COMMIT_INFO\\\" }\" > \"src/commitInfo.json\";\n",
    "update-commit-hash:win32": "echo {\"commitInfo\" : \"unknown-version\" } > \"src\\commitInfo.json\"",
    "generate-notice": "run-script-os",
    "generate-notice:darwin:linux": "mkdir -p notices && yarn licenses generate-disclaimer --ignore-platform --production > notices/notices.txt && yarn node build_scripts/generateNotices.js",
    "generate-notice:win32": "if not exist notices mkdir notices && yarn licenses generate-disclaimer --ignore-platform --production > notices/notices.txt && yarn node build_scripts/generateNotices.js",
    "ship-linux": "yarn build && electron-builder --linux --x64 --publish never",
    "ship-win": "yarn build && electron-builder --win --x64 --publish never",
    "ship-mac": "yarn build && electron-packager . OpossumUI --ignore=^/release --ignore=^/src --ignore=^/example-files --ignore=^/run_precommit.sh --ignore=^/README.md --ignore=__tests__ --platform=darwin arch=x64 --overwrite --out=release/macOS --icon src/ElectronBackend/logo/icon.icns && zip -r -q 'release/macOS/OpossumUI-darwin-x64.zip' 'release/macOS/OpossumUI-darwin-x64/'",
    "ship": "yarn ship-linux && yarn ship-win && yarn ship-mac",
    "clean": "rm -rf ./build/ ./release/",
    "postinstall": "husky install && yarn update-commit-hash",
    "pre-commit": "lint-staged"
  },
  "main": "build/ElectronBackend/app.js",
  "build": {
    "appId": "resource-browser_electron",
    "directories": {
      "buildResources": "build",
      "output": "release/linux_and_windows"
    },
    "win": {
      "target": "nsis",
      "icon": "src/ElectronBackend/logo/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/ElectronBackend/logo/icon.png"
    },
    "extraMetadata": {
      "main": "build/ElectronBackend/app.js"
    },
    "extraResources": [
      "./notices/**",
      "./src/ElectronBackend/logo/icon.png",
      "./src/ElectronBackend/logo/icon.icns"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "./run_precommit.sh"
    ]
  },
  "jest": {
    "resetMocks": false
  }
}
